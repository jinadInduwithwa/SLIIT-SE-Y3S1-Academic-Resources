<!DOCTYPE html>
<html>
<head>
  <title>All Posts</title>
</head>
<body>
  <h1>All Posts</h1>
  <% posts.forEach(post => { %>
    <div>
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <% if (post.image) { %>
        <img src="/uploads/<%= post.image %>" width="200"/>
      <% } %>
    </div>
  <% }); %>
</body>
</html>
